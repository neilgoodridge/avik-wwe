<button><%= link_to 'Home', root_path %> </button>

<h3>Update a Scene</h3>
<h4>Current title: </h4><p><%= @scene.title %></p>
<h4>Current description:</h4> <p><%= @scene.description %> </p>
<h5>Please add a new title and/or description below</h5>
<%= form_with model: @scene do |form| %>
  <%= form.text_field :Title, placeholder: "New Title" %>
  <%= form.text_field :Description, placeholder: "New Description" %>
  <%= form.submit %>
<% end %>
